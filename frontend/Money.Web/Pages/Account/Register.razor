@page "/Account/Register"

<PageTitle>Регистрация</PageTitle>

<MudText GutterBottom
         Typo="Typo.h3">
    Создайте новый аккаунт
</MudText>

<MudGrid>
    <MudItem md="6">
        <EditForm asp-route-returnUrl="@ReturnUrl"
                  FormName="register"
                  method="post"
                  Model="Input"
                  OnValidSubmit="RegisterUser">
            <DataAnnotationsValidator />

            <MudText GutterBottom
                     Typo="Typo.body1">
                Пожалуйста, заполните следующие поля:
            </MudText>

            <MudGrid>
                <MudItem md="12">
                    <MudTextField @bind-Value="Input.Email"
                                  For="@(() => Input.Email)"
                                  Label="Электронная почта"
                                  Placeholder="name@example.com"
                                  UserAttributes="@(new Dictionary<string, object?> { { "autocomplete", "true" }, { "aria-required", "true" } })" />
                </MudItem>
                <MudItem md="12">
                    <MudTextField @bind-Value="Input.Password"
                                  For="@(() => Input.Password)"
                                  InputType="InputType.Password"
                                  Label="Пароль"
                                  Placeholder="пароль"
                                  UserAttributes="@(new Dictionary<string, object?> { { "autocomplete", "new-password" }, { "aria-required", "true" } })" />
                </MudItem>
                <MudItem md="12">
                    <MudTextField @bind-Value="Input.ConfirmPassword"
                                  For="@(() => Input.ConfirmPassword)"
                                  InputType="InputType.Password"
                                  Label="Подтвердите пароль"
                                  Placeholder="подтвердите пароль"
                                  UserAttributes="@(new Dictionary<string, object?> { { "autocomplete", "new-password" }, { "aria-required", "true" } })" />
                </MudItem>
                <MudItem md="12">
                    <MudButton ButtonType="ButtonType.Submit"
                               Color="Color.Primary"
                               FullWidth
                               Variant="Variant.Filled">
                        Зарегистрироваться
                    </MudButton>
                </MudItem>
            </MudGrid>
        </EditForm>
    </MudItem>
</MudGrid>
