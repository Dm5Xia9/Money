@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@_appSettings.IsDarkMod" @ref="@_mudThemeProvider" Theme="_defaultTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Class="docs-appbar-filter mud-appbar mud-appbar-fixed-top mud-elevation-0 mud-theme-transparent">
        <MudIconButton Color="Color.Inherit" Edge="Edge.Start" Icon="@Icons.Material.Filled.Menu" OnClick="ToggleDrawer" />
        <MudSpacer />
        @*<MudBadge Class="cursor-pointer"
                  Color="@(_appSettings.IsManualMode ? Color.Primary : Color.Secondary)"
                  Icon="@(_appSettings.IsManualMode ? Icons.Material.Filled.Check : Icons.Material.Filled.SwapHoriz)"
                  OnClick="ToggleManualMode"
                  Overlap>
            <MudIconButton Color="Color.Inherit"
                           Icon="@Icons.Material.Rounded.Brightness4"
                           OnClick="ToggleDarkMode"
                           Size="Size.Medium"
                           title="@(_appSettings.IsManualMode ? "Manual" : "Auto")" />
        </MudBadge>*@
    </MudAppBar>
    <MudDrawer @bind-Open="DrawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudStack AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Row Spacing="3">
                <MudImage Height="64" Src="./icon-192.png" />
                <MudText Typo="Typo.h5">Филочки</MudText>
            </MudStack>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            <CascadingValue Value="_appSettings">
                @Body
            </CascadingValue>
        </MudContainer>
    </MudMainContent>
</MudLayout>
