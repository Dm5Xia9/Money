<MudNavMenu>
    <MudNavLink Href="" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All">Главная</MudNavLink>
    <MudNavLink Href="weather" Icon="@Icons.Material.Filled.List" Match="NavLinkMatch.Prefix">Погода</MudNavLink>
    <MudNavLink Href="auth" Icon="@Icons.Material.Filled.Lock" Match="NavLinkMatch.Prefix">Требуется авторизация</MudNavLink>

    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="Operations" Icon="@Icons.Material.Filled.Money" Match="NavLinkMatch.Prefix">Операции</MudNavLink>
            <MudNavLink Href="Categories" Icon="@Icons.Material.Filled.Category" Match="NavLinkMatch.Prefix">Категории</MudNavLink>
            <MudNavLink Href="Account/Manage" Icon="@Icons.Material.Filled.Person" Match="NavLinkMatch.Prefix">@context.User.Identity?.Name</MudNavLink>

            <MudNavLink Href="@(NavigationManager.GetUriWithReturnUrl("Account/Logout", _currentUrl))"
                        Icon="@Icons.Material.Filled.Logout"
                        Match="NavLinkMatch.Prefix"
                        IconColor="Color.Info">
                Выйти
            </MudNavLink>
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="Account/Register" Icon="@Icons.Material.Filled.Person" Match="NavLinkMatch.Prefix">Регистрация</MudNavLink>
            <MudNavLink Href="Account/Login" Icon="@Icons.Material.Filled.Password" Match="NavLinkMatch.Prefix">Вход</MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>
