<MudStack AlignItems="AlignItems.Center"
          Row>

    <MudStack AlignItems="AlignItems.Center"
              Row
              Spacing="0">
        <MudIcon Color="@Category.PaymentType.Color"
                 Icon="@Category.PaymentType.Icon"
                 Size="Size.Small" />

        <PaymentDialog OnSubmit="OnEdit"
                       Payment="@Payment"
                       @ref="_dialog">
            <MudTooltip Text="Редактировать">
                <MudIconButton Icon="@Icons.Material.Rounded.ModeEdit"
                               OnClick="() => _dialog.ToggleOpen()"
                               Size="Size.Small" />
            </MudTooltip>
        </PaymentDialog>
    </MudStack>
    <MudItem md="1"
             xs="2">
        <MudText Align="Align.Left"
                 Inline>
            @Payment.Sum.ToString("N0")
        </MudText>
    </MudItem>
    <MudItem md="3"
             xs="9">
        <MudText Align="Align.Left"
                 Inline
                 title="@Category.Name">
            @Category.Name
        </MudText>
    </MudItem>
    <MudItem md="3"
             xs="5">
        <MudText Align="Align.Left"
                 Inline
                 title="@Payment.Place">
            @Payment.Place
        </MudText>
    </MudItem>
    @if (Payment.CreatedTaskId != null)
    {
        <MudItem xs="1">
            <MudIcon Icon="@Icons.Material.Rounded.CheckCircle"
                     Title="Создано регулярной задачей" />
        </MudItem>
    }
    <MudItem md="4"
             xs="6">
        <MudText Align="Align.Left"
                 Inline>
            @Payment.Comment
        </MudText>
    </MudItem>
    <MudSpacer />
    <MudTooltip Text="Удалить">
        <MudIconButton Color="Color.Error"
                       Icon="@Icons.Material.Rounded.Delete"
                       OnClick="() => OnDelete.InvokeAsync(Payment)"
                       Size="Size.Small" />
    </MudTooltip>
</MudStack>
